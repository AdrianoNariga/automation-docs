#!/bin/bash

debian(){
	apt update
	apt install python-dev build-essential python-virtualenv python-pip -y
	pip install --upgrade pip
	virtualenv /root/.ansible
	source /root/.ansible/bin/activate
	pip install paramiko
	pip install paramiko
	pip install PyYAML Jinja2 httplib2 six markupsafe ecdsa
	pip install ansible
}

debian
