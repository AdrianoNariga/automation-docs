#/bin/bash
source functions/determine_so

centos(){
    yum install -y openvpn easy-rsa
}

deploy(){
    files="example-confs/server_server.conf example-confs/ccd gen_certs easy-rsa"
    opvpn_dir="/etc/openvpn"
    for file in example-confs/server_server.conf example-confs/ccd gen_certs easy-rsa
    do
        test -e $file || cp -r $opvpn_dir
    done
    cd $opvpn_dir
    gen_certs -s "$(hostname)"
}

centos
deploy
